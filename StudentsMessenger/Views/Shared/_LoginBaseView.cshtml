@using Microsoft.AspNetCore.Identity
@using StudentsMessenger.Models
@inject SignInManager<Student> SignInManager
@inject UserManager<Student> UserManager

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" href="/Base/Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark">Hello @User.Identity.Name!</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="/Base/Logout"> Logout</a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" href="/Home/Registration">Registration</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="/Home/Login">Login</a>
            </li>
        }
    </ul>